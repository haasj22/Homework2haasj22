<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/faceOverlordLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/faceCustomizationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.homework21.Face
            android:id="@+id/myFaceSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="500sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hairStyleTextView"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Hair Style"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/hairTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/featureRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hairRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hair"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/eyesRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:duplicateParentState="false"
                android:gravity="center"
                android:text="Eyes"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/skinRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Skin"
                android:textSize="24sp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/redColorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/redTextView"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Red"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/redSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/greenColorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Green"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/greenSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blueColorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blueTextView"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/blueSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:max="255" />
        </LinearLayout>

        <Button
            android:id="@+id/randomizeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random Face" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>